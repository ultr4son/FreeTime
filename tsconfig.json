{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "sourceRoot": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "jsx": "react",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true
        
    
    },
    "include": [
        "src/**/*"
    ]
}